<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:GammaCrsQAInstaller.MasterPages">


    <Style TargetType="{x:Type local:Master}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Master}">
                    
                    <Grid Background="#FFE5E5E5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="4*"/>
                        </Grid.RowDefinitions>
                        
                        <ContentPresenter Content="{TemplateBinding Tools}" VerticalAlignment="Center"/>
                        
                        <GridSplitter HorizontalAlignment="Stretch" Margin="0" Grid.Row="1" Height="5"/>
                

                        <GroupBox x:Name="groupBox1" Header="Operation Result" Margin="0" Grid.Row="2">
                            <TextBox x:Name="ToolsTB" Margin="0,5,0,0">
                                
                            </TextBox>
                        </GroupBox>

                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
